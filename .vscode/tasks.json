{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "python build.py",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "windows": {
                "command": "& '${workspaceFolder}/.venv/Scripts/Activate.ps1'; python build.py"
            },
            "osx": {
                "command": "source '${workspaceFolder}/.venv/bin/activate'; python build.py"
            }
        }
    ]
}